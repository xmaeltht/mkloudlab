extends: relaxed
rules:
  line-length: disable
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  trailing-spaces: enable
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
exclude: |
  platform/istio/templates/virtualservice-template.yaml
